{
  "name": "@conway/automaton",
  "version": "0.1.0",
  "description": "Conway Automaton - Sovereign AI Agent Runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config.js": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./state/database.js": {
      "types": "./dist/state/database.d.ts",
      "default": "./dist/state/database.js"
    },
    "./conway/client.js": {
      "types": "./dist/conway/client.d.ts",
      "default": "./dist/conway/client.js"
    },
    "./treasury/types.js": {
      "types": "./dist/treasury/types.d.ts",
      "default": "./dist/treasury/types.js"
    },
    "./treasury/intent-queue.js": {
      "types": "./dist/treasury/intent-queue.d.ts",
      "default": "./dist/treasury/intent-queue.js"
    },
    "./treasury/policy.js": {
      "types": "./dist/treasury/policy.d.ts",
      "default": "./dist/treasury/policy.js"
    },
    "./treasury/executor.js": {
      "types": "./dist/treasury/executor.d.ts",
      "default": "./dist/treasury/executor.js"
    }
  },
  "bin": {
    "automaton": "dist/index.js",
    "conway-automaton": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Conway-Research/automaton.git"
  },
  "homepage": "https://conway.tech",
  "keywords": [
    "autonomous-agent",
    "sovereign-ai",
    "web4",
    "conway",
    "self-replicating"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc && pnpm -r build",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "clean": "rm -rf dist && pnpm -r clean",
    "configure:synthesis": "node scripts/configure-synthesis-controller.mjs",
    "bootstrap:synthesis": "node scripts/bootstrap-synthesis-automaton.mjs",
    "run:synthesis": "bash scripts/run-synthesis-controller.sh",
    "treasury:worker": "node scripts/treasury-vultisig-worker.mjs",
    "treasury:signer": "node scripts/treasury-vultisig-send-signer.mjs",
    "treasury:telegram:resolve": "node scripts/treasury-telegram-resolve-chat.mjs",
    "treasury:telegram:test": "node scripts/treasury-telegram-test.mjs",
    "treasury:telegram:commands": "node scripts/treasury-telegram-command-worker.mjs",
    "treasury:telegram:listen": "node scripts/treasury-telegram-command-worker.mjs --loop"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "cron-parser": "^4.9.0",
    "gray-matter": "^4.0.3",
    "ora": "^8.0.0",
    "siwe": "^2.3.0",
    "simple-git": "^3.24.0",
    "ulid": "^2.3.0",
    "viem": "^2.44.2",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
